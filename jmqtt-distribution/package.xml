<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>all</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>

        <fileSet>
            <includes>
                <include>conf/**</include>
                <include>benchmark/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.jmqtt:jmqtt-broker</include>
                <include>org.jmqtt:jmqtt-remoting</include>
                <include>org.jmqtt:jmqtt-common</include>
                <include>org.jmqtt:jmqtt-store</include>
                <include>org.jmqtt:jmqtt-group</include>
            </includes>
            <binaries>
                <outputDirectory>lib/</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>lib/</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
